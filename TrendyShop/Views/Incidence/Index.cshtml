@using TrendyShop.Models
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Incidence>



<div class="col-lg-8 mb-4 mx-auto">
    <div class="card ">
        <h3 class="card-header h-100">
            Incidencias
        </h3>
        <div class="card-body">
            @if (Model.Count() == 0)
            {
                <div class="text-center">
                    <text> No hay incidencias registradas</text>
                </div>
            }
            else
            {
                <table class="table table-bordered">
                    <tr>
                        <th>Asunto</th>
                        <th>Precio</th>
                        <th>Descripción</th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.Subject</td>
                            <td>@i.Price</td>
                            <td>@i.Description</td>
                            <td>@Html.ActionLink("Editar", "Edit", "Incidence", new { iid = i.IncidenceId })</td>
                            <td>@Html.ActionLink("", "Delete", "Incidence", new { iid = i.IncidenceId }, new { @class = "fas fa-trash-alt" })</td>
                        </tr>

                    }
                </table>
            }
        </div>

        <div class="card-footer">
            <button  onclick="location.pathname = 'Incidence/NewIncidence'">Añadir</button>
            <button  onclick="location.pathname='/Home'">Cancelar</button>
        </div>
    </div>
</div>
