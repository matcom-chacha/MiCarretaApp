@model TrendyShop.Models.Employee
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="col-lg-5 mb-4 mx-auto">
    <div class="card ">
        @*<div class="card-header h-100">
            <h3>Editar Información</h3>
        </div>*@
        <div class="card-body">
            @using (Html.BeginForm("SaveEdit", "Employee"))
            {
                <div class=" form-group">
                    @Html.LabelFor(a => a.Name)
                    @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Name)
                </div>
              
                <div class=" form-group">
                    @Html.LabelFor(a => a.Phone)
                    @Html.TextBoxFor(a => a.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.Phone)
                </div>

                @Html.HiddenFor(a => a.EmployeeId)

            }
        </div>
        <div class="card-footer">
            <div class="text-center">
                <button type="submit">Guardar</button>
            </div>
        </div>
    </div>
</div>


