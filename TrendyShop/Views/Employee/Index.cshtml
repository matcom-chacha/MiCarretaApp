@using TrendyShop.Models

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model List<Employee>

<div class="col-lg-5 mb-4 mx-auto">
    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card h-100">
                <h2 class="card-header text-center">Empleados</h2>
                <div class="card-body">
                    @foreach (Employee a in Model)
                    {
                        <button class="col-lg-12 text-left" style="background-color: rgb(116,216,216)">
                            <i class="fas fa-user"></i> @Html.ActionLink(a.Name, "EmployeeProfile", "Employee", new { id = a.EmployeeId }, null)
                        </button>
                        <hr />
                    }
                    @if (Model.Count == 0)
                    {
                        <div class="text-center">
                            <text> No hay empleados registrados</text>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


