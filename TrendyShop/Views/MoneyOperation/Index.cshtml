@model TrendyShop.ViewModels.MoneyOperationViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport"
          content="witdh=device-width , initial-scale=1">
</head>
<body>
    <div class="row mb-5">
        <div class="card col-lg-5 mb-5">
            <div class="card-body">
                <div class="row d-flex flex-column">
                    <div class="col-lg-8 mb-4 mx-auto">
                        <div class="card ">
                            <div class="card-header" style="background-color:rgb(240,240,250); height:60px">
                                <h2>Total en Caja</h2>
                            </div>
                            <div class="card-body">
                                <h3>@Model.TotalIncome$</h3>
                                <button class="blue-button" onclick="location.pathname= 'MoneyOperation/DepositForm'">Depositar</button>
                                <button class="red-button" onclick="location.pathname= 'MoneyOperation/ExtractForm'">Extraer</button>
                            </div>
                        </div>
                    </div>
                    @if (Model.MoneyOperations.Count > 0)
                    {
                        <div class="col-lg-12">
                            <div class="card">
                                <h2 class="card-header" style="background-color:rgb(240,240,250)">
                                    Operaciones del día
                                </h2>
                                <div class="card-body">
                                    <ul>
                                        @{
                                            var operation = " Depósito ";
                                        }
                                        @foreach (var mo in Model.MoneyOperations)
                                        {
                                            if (mo.IsExtraction)
                                            {
                                                operation = " Extracción ";
                                            }
                                            var str = mo.Date.ToString("hh:mm tt") + operation + mo.Amount.ToString() + " $ " + mo.Employee.Name;
                                            <li class="mt-3">@str</li>
                                            <text>Asunto: @mo.Subject</text>

                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <hr />
        <div class="card col-lg-5 mb-5 text-left">
            <div class="card-body">
                <div class="row d-flex flex-column">
                    <div class="col-lg-8 mb-4 mx-auto">
                        <div class="card ">
                            <div class="card-header" style="background-color:rgb(240,240,250); height:60px">
                                <h2>Fondo</h2>
                            </div>
                            <div class="card-body">
                                <h3>@Model.Fund$</h3>
                                <button class="blue-button" onclick="location.pathname= 'MoneyOperation/FundDepositForm'">Depositar</button>
                                <button class="red-button" onclick="location.pathname= 'MoneyOperation/FundExtractForm'">Extraer</button>
                            </div>
                        </div>
                    </div>

                    @if (Model.FundMoneyOperations.Count > 0)
                    {
                        <div class="col-lg-12">
                            <div class="card">
                                <h2 class="card-header" style="background-color:rgb(240,240,250)">
                                    Operaciones del día
                                </h2>
                                <div class="card-body">
                                    <ul class="d-flex flex-column">
                                        @{
                                            var operation = " Depósito ";
                                        }
                                        @foreach (var mo in Model.FundMoneyOperations)
                                        {
                                            if (mo.IsExtraction)
                                            {
                                                operation = " Extracción ";
                                            }
                                            var str = mo.Date.ToString("hh:mm tt") + operation + mo.Amount.ToString() + " $ " + mo.Employee.Name;
                                            <li class="mt-3">@str</li>
                                            <text>Asunto: @mo.Subject</text>

                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>